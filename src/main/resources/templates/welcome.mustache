<html>
<head>
<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
<style>

form.clear-form{
    margin:0 0 0 20px;
    padding:0;
    width:30px;
    height:30px;
    float: left;
}

</style>

</head>
<body class="container">

<h1>Example sparkJava + mongodb <span class="label label-default">:)</span></h1>

<form role="form" action="/user{{action}}" method="POST">
  <div class="form-group">
    <label for="exampleInputEmail1">Email address</label>
    <input type="email"  value="{{user.email}}" name="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">name</label>
    <input value="{{user.name}}" type="text" class="form-control" name="name" id="exampleInputPassword1" placeholder="your name">
  </div>
  <input type="hidden" name="id" value="{{user.id}}"/>
  <button type="submit" class="btn btn-primary btn-lg">Submit</button>
</form>

<!-- table -->

<div class="row">
  <div class="col-md-8"></div>
  <div class="col-md-4">
      <form class="navbar-form navbar-left" role="search" action="/user/search" method="POST">
        <div class="form-group">
          <input type="text" name="search" class="form-control" placeholder="Search name or mail">
        </div>
        <button type="submit" class="btn btn-default">find
            <i class="glyphicon glyphicon-search"></i>
        </button>
      </form>

  </div>
</div>
<table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th>@email</th>
          <th>@name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
          {{#list}}
              <tr>
                 <td>{{id}}</td>
                 <td>{{email}}</td>
                 <td>{{name}}</td>
                 <td>
                   <form class="clear-form" action="/user/load" method="post">
                       <input type="hidden" name="id" value="{{id}}"/>
                       <button class="btn btn-primary btn-sm " type="submit">
                        <i class="glyphicon glyphicon-pencil"></i>
                       </button>
                   </form>

                 <form class="clear-form" action="/user/delete" method="post" >
                     <input type="hidden" name="id" value="{{id}}"/>
                     <button onclick="return confirm('Are you sure?')"  class="btn btn-primary btn-sm" type="submit"/>
                          <i class="glyphicon glyphicon-trash"></i>
                      </button>
                 </form>

                 </td>
              </tr>
          {{/list}}
      </tbody>
    </table>


 </body>
 </html>